# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/seo-pr-bot
# For Heroku: Use MongoDB Atlas or Heroku Postgres
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/seo-pr-bot

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Puppeteer Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/app/.chrome-for-testing/chrome-linux64/chrome

# Heroku Specific
DYNO=web

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging
LOG_LEVEL=info
